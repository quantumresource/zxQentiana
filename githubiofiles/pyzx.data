        r = max(rs[self.target],rs[self.control])
        t = self.graph_add_node(g,labels, qs,2,self.target,r)
        c = self.graph_add_node(g,labels, qs,1,self.control,r)
        g.add_edge((t,c))
        rs[self.target] = r+1
        rs[self.control] = r+1

